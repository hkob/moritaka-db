%h1=t '.title'

%table.bordered
  %caption=t 'head.first_letter'
  -@heads.in_groups_of((@heads.count+1)/2.0).each do |array|
    %tr
      -array.each do |fl|
        %td
          =link_to lh(fl), titles_path(head:@lhead_hash[fl]) if fl
%hr

%table
  %tr
    -%w(link.titles).each do |k|
      %th=t k
    -if @is_dev
      %th=t 'head.control'
  -@titles.each do |title|
    -name = title.name(@is_ja)
    %tr{id:name}
      %td=name
      -if @is_dev
        %th
          =link_to lh(t 'link.edit'), edit_title_path(title)
          =link_to lh(t 'link.destroy'), title_path(title), method: :delete, data:{ confirm:t('confirm.destroy') } if title.can_delete?

-if @is_dev
  %h2=t 'titles.new.title'
  %table
    %tr
      %td=link_to lh(t 'titles.new.title'), new_title_path
