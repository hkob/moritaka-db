%h1=show_title

%ul.nav.nav-tabs
  -@heads.each do |array|
    -first = array.first
    -last = array.last
    -head=@lhead_hash[first]
    %li{class:(head == @head) ? "active disable" : nil}=link_to "#{first} - #{last}", people_path(head:head)
%table.table-bordered.table-striped.table-hover
  %thead
    %tr
      -%w(link.people head.another_name).each do |k|
        %th=t k
      -if @is_dev
        %th=t 'head.control'
  %tbody
    -@people.each do |person|
      -next if person.parent
      -name = person.name(@is_ja)
      -has_children = false
      %tr{id:name}
        %td=name
        %td
          -person.children.each do |p|
            -has_children = true
            =p.name(@is_ja)
            -if @is_dev
              .btn-group.btn-group-xs
                =link_to t('link.delete_link'), person_path(p, person:{ parent_id:nil }), method: :put, class:"btn btn-default"
        -if @is_dev
          %td.btn-group.btn-group-xs
            -unless has_children
              =link_to t('link.add_main'), edit_person_path(person), class:"btn btn-default"
              =link_to t('link.destroy'), person_path(person), class:"btn btn-default", method: :delete, data:{ confirm:t('confirm.destroy') } if person.can_delete?




